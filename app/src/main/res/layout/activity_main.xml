<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <androidx.cardview.widget.CardView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="@dimen/dp_40"
        app:cardCornerRadius="@dimen/dp_12"
        app:cardElevation="@dimen/dp_4">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <RadioGroup
                android:layout_width="@dimen/dp_312"
                android:layout_height="@dimen/dp_102"
                android:layout_gravity="center"
                android:orientation="horizontal"
                android:paddingLeft="@dimen/dp_24"
                android:paddingRight="@dimen/dp_24">

                <RadioButton
                    android:id="@+id/list_but"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dp_20"
                    android:layout_weight="1"
                    android:button="@null"
                    android:drawableTop="@mipmap/common_icon_all_list_n_xxhdpi"
                    android:drawablePadding="@dimen/dp_10"
                    android:gravity="center"
                    android:text="全部订单" />

                <RadioButton
                    android:id="@+id/pay_but"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dp_20"
                    android:layout_weight="1"
                    android:button="@null"
                    android:drawableTop="@mipmap/common_icon_pay_n_xxhdpi"
                    android:drawablePadding="@dimen/dp_10"
                    android:gravity="center"
                    android:text="待付款" />

                <RadioButton
                    android:id="@+id/receive_but"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dp_20"
                    android:layout_weight="1"
                    android:button="@null"
                    android:drawableTop="@mipmap/common_icon_receive_n_xxhdpi"
                    android:drawablePadding="@dimen/dp_10"
                    android:gravity="center"
                    android:text="待收货" />

                <RadioButton
                    android:id="@+id/finish_but"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dp_20"
                    android:layout_weight="1"
                    android:button="@null"
                    android:drawableTop="@mipmap/commom_icon_comment_n_xxhdpi"
                    android:drawablePadding="@dimen/dp_10"
                    android:gravity="center"
                    android:text="待评价" />

                <RadioButton
                    android:id="@+id/comment_but"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dp_20"
                    android:layout_marginRight="@dimen/dp_10"
                    android:layout_weight="1"
                    android:button="@null"
                    android:drawableTop="@mipmap/common_icon_finish_n_xxhdpi"
                    android:drawablePadding="@dimen/dp_10"
                    android:gravity="center"
                    android:text="已完成" />
            </RadioGroup>
        </LinearLayout>
    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:layout_marginLeft="@dimen/dp_24"
        android:layout_marginRight="@dimen/dp_24"
        app:cardCornerRadius="@dimen/dp_12"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_20">

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
    </androidx.cardview.widget.CardView>


</LinearLayout>